    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
          "mcpServers": {
            "server-name": {
              "command": "python",
              "args": ["mcp-server.py"],
              "env": {
                "API_KEY": "value"
              }
            }
          }
        }

    ]
}